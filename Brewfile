# ----------------------------------------------------
# Brewfile - My macOS Application Setup
# ----------------------------------------------------
# Run `brew bundle install` in the same directory as this file.
#
# Use `brew search <appname>` or `brew search --cask <appname>`
# to find the correct package name.
# ----------------------------------------------------

# Tap repositories (optional, needed for some specific apps)
# tap "repository/tapname" # Example: tap "homebrew/cask-fonts"

# Command-line tools (Formulae)
brew "git"          # Version control system (often included with Xcode tools)
brew "gh"
brew "htop"         # Interactive process viewer
brew "wget"         # File downloader
brew "nushell"
brew "node"         # JavaScript runtime (if you do web development)
# brew "python"     # Python programming language (macOS has a system version)
brew "tailscale"
brew "cmake"

# GUI Applications (Casks)

# -- Browsers --
cask "google-chrome"

# -- Communication --
cask "slack"
cask "zoom"
cask "discord"
cask "whatsapp"
cask "telegram"
cask "signal"

# -- Productivity --
