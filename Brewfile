cask "appcleaner"       # Utility to uninstall apps thoroughly
cask "pearcleaner"
cask "itsycal"
cask "reminders-menubar"
cask "stats"            # System monitor in menu bar
cask "monitorcontrol"   # Control external display brightness/volume
cask "prusaslicer"
cask "ghostty"
